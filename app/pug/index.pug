block variables 
  - var title = 'Физкульт-мастер'
  - var pageClass = 'brands-page'
doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="../css/libs.min.css")
    link(rel="stylesheet" href="../css/style.min.css")
    title #{title}
  body.fixed
    include modules/preloader/preloader
    header.header   
      include modules/header/header
      include pages/index/banner
      include pages/index/advantages
      include pages/index/hits
      include pages/index/information
      include pages/index/about
      include modules/footer/footer
    script(src="js/libs.min.js")
    script(src="js/main.js") 


