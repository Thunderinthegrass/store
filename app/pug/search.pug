block variables 
  - var title = 'Поиск'
  - var pageClass = 'brands-page'
doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="css/libs.min.css")
    link(rel="stylesheet" href="css/style.min.css")
    title #{title}
  body.fixed
    include modules/preloader/preloader
    header.header
      include modules/header/header
      .breadcrumbs 
        .container
          ul.breadcrumbs__list
            li.breadcrumbs__item 
              a(href="index.html").breadcrumbs__link Главная
            li.breadcrumbs__item 
              span.breadcrumbs__current Поиск
    section.s-search 
      .container 
        h1.title-page Результаты поиска
        .search-result 
          .search-result__header
            .search-result__request 
              span.search-result__label По запросу:
            span.search-result__label Найдено 48 товаров:
          .search-result__body
            .products-prev__wrapper
              include modules/products/prev-1
              include modules/products/prev-2
              include modules/products/prev-3
              include modules/products/prev-4
              include modules/products/prev-1
              include modules/products/prev-2
              include modules/products/prev-3
              include modules/products/prev-4
              include modules/products/prev-1
              include modules/products/prev-2
              include modules/products/prev-3
              include modules/products/prev-4
              include modules/products/prev-1
              include modules/products/prev-2
              include modules/products/prev-3
              include modules/products/prev-4
    include modules/footer/footer
    script(src="js/libs.min.js")
    script(src="js/main.js")